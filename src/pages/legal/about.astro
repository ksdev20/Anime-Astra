---
import Layout from "../../layouts/Layout.astro";
import { AboutParas, termsLi, dmcaLi } from "../../config/About/config";
import "../../styles/pages/BlogPage/creator-section.css";
import "../../styles/pages/About/about.css";
---

<Layout title="About Anime Astra" forPage="about">
  <div class="about-page">
    <p>Last Updated : 26-09-2025</p>
    <h1 class="sr-only">About Anime Astra</h1>
    <section class="about-sect">
      <h2 class="about-head">About</h2>
      <p>
        {AboutParas[0]}
      </p>
    </section>
    <section id="terms" class="about-sect">
      <h2 class="about-head">Terms of Service</h2>
      <p class="terms-p">
        {AboutParas[1]}
      </p>
      <ol>
        {termsLi.map((obj) => (
            <li>
                {obj}
            </li>
        ))}
      </ol>
    </section>
    <section id="privacy-policy" class="about-sect">
      <h2 class="about-head">Privacy Policies</h2>
      <p>
        {AboutParas[2]}
      </p>
    </section>
    <section id="dmca" class="about-sect">
      <h2 class="about-head">DMCA Notice</h2>
      <p>
        {AboutParas[3]}
      </p>
      <ol class="my-5">
        {dmcaLi.map((obj) => (
            <li>
                {obj}
            </li>
        ))}
      </ol>
      <p class="self-start">We will respond promptly to valid requests and remove infringing content as required by law.</p>
    </section>
  </div>
</Layout>
